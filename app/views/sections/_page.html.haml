%li.sitemap_page
  =link_to page, page
  -if page.draft?
    \-
    %span.page_status
      draft
  -elsif !page.been_published?
    \-
    %span.page_status
      not yet published
  -elsif page.expired?
    \-
    %span.page_status
      expired
  -bracket(:class => 'admin_links') do
    -separate_links do
      =link_if_allowed 'Edit', edit_page_proc(page)
      =link_if_allowed 'Delete', page, :method => :delete, :confirm => "Are you sure you want to delete this page?"
