.doc{:class => "doc_#{document.file_ext}"}
  .doc_icon=document_icon(document)
  %h4=link_to document, document, :target => "_blank"
  -separate_links do
    =link_to 'Download', document, :target => "_blank", :class=>'download_text'
    =link_if_allowed 'Edit', edit_document_proc(document)
    =link_if_allowed 'Delete', document_proc(document), :method => :delete, :confirm => 'Are you sure you want to delete this document?'