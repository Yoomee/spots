-title "Activities"
%ul.lst
  -@activities.each do |activity|
    %li
      =link_to_self(activity)
      ="(restricted to #{activity.organisation_group})" if activity.organisation_group

-options_panel do
  =back_link
  =link_if_allowed 'New activity', new_activity_proc
  =link_if_allowed 'Set order', order_activities_proc