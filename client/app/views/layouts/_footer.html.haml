#footer.container
  .row
    #footer_copyright.fourcol
      %p#copyright
        %strong
          \&copy; 2011 
          ="#{site_name}"
    #footer_links.fourcol
      %ul
        - if admin_logged_in?
          %li
            -link_to(admin_path) do
              %strong
                admin
        %li
          =link_to_slug("Legal", :legal)
        %li
          =link_to("Site map", "/sections") 
               
    .logos
      %img{:src => "/images/logos-100.png"}
      %img{:src => "/images/unltd-50.png"}
      %img{:src => "/images/nexters-50.png"}
      =link_to("site by <span>Yoomee</span>", "http://www.yoomee.com", :id => "siteby")

%div{:style=>"display:none"}
  #login_popup
    %h2
      Member Log in
    - form_tag session_url do
      #login_form
        %p.login_email
          %label{ :for => "login_email" }
            Email/Username:
          = text_field_tag 'login_email_or_username', @login_email_or_username
          = star
        %p.password
          %label{ :for => "login_password" }
            Password:
          = password_field_tag 'login_password'
          = star
        = submit_tag 'Log in', :id => 'login_bttn'      
