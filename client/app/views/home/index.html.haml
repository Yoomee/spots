-content_for :head do
  :javascript
    $(document).ready(function(){
      $('.feature_panel_right').cycle({
        fx: 'scrollHorz',
        speed: 'slow',
        timeout: 8000,
        easing: 'easeOutQuint',
        pager: '#feature_panel_nav',
        before: function(currSlideElement, nextSlideElement, options, forwardFlag) {
          var slideNum = $(nextSlideElement).attr("data-slide-num");
          $(".feature_panel_info").hide();
          $("#feature_panel_info_" + slideNum).fadeIn();
        }
      });
    });
-no_content_row
-hidden_title "Spots of Time"
#feature_panel_row.row
  .twelvecol
    .feature_panel_left
      %h3 How this works
      #feature_panel_info_1.feature_panel_info
        Got a moment?  Weâ€™ve created a range of fun, bite-size activities that you can do in your local community.  It's easy to get involved and there's no long term commitment.
      #feature_panel_info_2.feature_panel_info
        Help us grow. Suggest 'Spots of Time' to organisations in your area and make it easy for people to give their time to benefit the community.
      #feature_panel_info_3.feature_panel_info
        Start changing your corner of the world with our simple anytime anywhere ideas that will bring a smile to you and those around you.
      #feature_panel_nav
    .feature_panel_right
      =image_tag("how-it-works-user.jpg", "data-slide-num" => 1)
      =image_tag("how-it-works-org.jpg", "data-slide-num" => 2)
      =image_tag("feature-panel.jpg", "data-slide-num" => 3)
.row
  .twelvecol.last
    -if !Activity.anytime.empty?
      #activity_filter
        %span Filter by
        =link_to_function("All", "ActivityFilter.filter('all')", :id => "activity_filter_all", :class => "active")
        =link_to_function("Volunteering", "ActivityFilter.filter('volunteering')", :id => "activity_filter_volunteering")
        =link_to_function("Anytime anywhere", "ActivityFilter.filter('anytime')", :id => "activity_filter_anytime")
  .twelvecol
    .activity_grid
      -Activity.all.each do |activity|
        -link_to(activity, :class => "activity type_#{activity.activity_type}") do
          =image_for(activity, "124x124#")
          .label=activity
.row
  .ninecol
    %h2 Blog
    -if Blog.first && post = Blog.first.posts.latest.first
      %p
        %strong
          =link_to(post.title, post)
      %p=post.created_at.strftime("%d %B %Y")
      =simple_format(strip_tags(post.text.word_truncate(250)))
      =link_to('More', post)
  .threecol.last