-title 'Dashboard'
-no_content_row
#admin_dashboard.row
  #admin_content.dash_col.fourcol
    %h2
      Content
    #dash_sections_and_pages.dash_item
      .dash_icon
      %h3
        Sections &amp; pages
      %ul
        %li
          %a{ :href => "/sections" }
            List sections
        %li
          %a{ :href => "/sections/new" }
            Add a section          
        %li
          %a{ :href => "/pages/new" }
            Add a page
    #dash_activities.dash_item
      .dash_icon
      %h3
        Activities
      %ul
        %li=link_to("List activities", activities_path)
        %li=link_to("Add an activity", new_activity_path)
    #dash_images.dash_item
      .dash_icon
      %h3
        Images
      %ul
        %li
          %a{ :href => "/photo_albums" }
            List photo albums
        %li
          %a{ :href => "/photo_albums/new" }
            Add a photo album
        %li
          %a{ :href => "/photos/new" }
            Add an image
          
  #dash_technical_stuff.dash_col.fourcol
    %h2
      Technical stuff
    #dash_enquiries.dash_item
      .dash_icon
      %h3
        Enquiries
      %ul
        %li
          %a{ :href => "/enquiries" }
            List enquiries
        
  #dash_membership.dash_col.fourcol.last
    %h2
      Membership
    #dash_members.dash_item
      .dash_icon
      %h3
        Members
      %ul
        %li
          %a{ :href => "/members" }
            List members
        %li
          %a{ :href => "/reports/new?name=members" }
            Members report
        %li
          =link_to 'New member', new_member_path
    #dash_organisations.dash_item
      .dash_icon
      %h3
        Organisations
      %ul
        %li=link_to("List organisations", organisations_path)
        %li=link_to("New organisation", new_organisation_path)